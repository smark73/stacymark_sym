{% extends '::base.html.twig' %}

{% block styles %}
    {{ parent() }}
{% endblock %}

{% block content %}
<div class="editor">
    <h1>Painting</h1>

    <table class="record_properties" >
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ vich_uploader_asset(entity, 'image') }}" alt="{{ entity.title }}" width="50" height="50"/></td>
            </tr>
            <tr>
                <th>Thumb</th>
                <td><img src="{{ vich_uploader_asset(entity, 'thumb') }}" alt="{{ entity.title }}" width="50" height="50" /></td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Medium</th>
                <td>{{ entity.medium }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ entity.datefin }}</td>
            </tr>
            <tr>
                <th>Dim</th>
                <td>{{ entity.dim }}</td>
            </tr>
            <tr>
                <th>Available</th>
                <td>{{ entity.available }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('painting') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('painting_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>
            <form action="{{ path('painting_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>
</div>
{% endblock %}
